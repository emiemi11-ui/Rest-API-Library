{
  "server": {
    "port": 8080,
    "workers": 4,
    "threads_per_worker": 8
  },
  "database": {
    "path": "rest_api.db",
    "pool": {
      "min": 5,
      "max": 20
    }
  },
  "jwt": {
    "secret": "your_secret_key_change_this_in_production",
    "expiration_hours": 24
  },
  "rate_limiting": {
    "enabled": true,
    "max_requests": 100,
    "window_seconds": 60
  },
  "logging": {
    "file": "rest_api.log",
    "level": "INFO",
    "max_size_mb": 10,
    "max_files": 5
  },
  "cors": {
    "enabled": true,
    "origin": "*"
  }
}
